{
    "manifest_version": 2,

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },

    "permissions": [
        "https://www.finalearth.com/api/*",
        "notifications"
    ]
}
