{
    "manifest_version": 2,
    "name": "Final Earth Link",

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },

    "icons": {
        "48": "icon48.png",
        "96": "icon96.png",
        "128": "thumbnail.png",
        "256": "icon256.png"
    },

    "permissions": [
        "https://www.finalearth.com/api/*",
        "notifications"
    ]
}
